<h1>All Giveaways</h1>

<%= link_to t('giveaways.giveaways.new_link'), new_giveaway_path %>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<%= @giveaways.each do |giveaway| %>
			<tr>
				<td><%= link_to giveaway.title, giveaway %></td>
				<td><%= giveaway.starts_at %></td>
				<td><%= giveaway.ends_at %></td>
			</tr>
		<% end %>
	</tbody>
</table>