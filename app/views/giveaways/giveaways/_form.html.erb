<%= simple_form_for [giveaways, @giveaway] do |f| %>
	
	<%= f.input :title %>

	<%= f.input :description %>

	<%= f.input :starts_at %>

	<%= f.input :ends_at %>

	<%= f.input :ballots_per_referral %>

	<%= f.input :number_of_prizes %>

	<%= f.input :thank_you_message, input_html: { value: t('giveaways.giveaways.forms.default_thank_you_message') } %>

	<%= f.input :email_from %>

	<%= f.input :email_reply_to %>

	<%= f.input :email_subject, input_html: { value: t('giveaways.giveaways.forms.default_email_subject') } %>

	<%= f.input :email_message, input_html: { value: t('giveaways.giveaways.forms.default_email_message') } %>
	

	<%= f.button :submit, @giveaway.persisted? ? t('giveaways.giveaways.forms.update') : t('giveaways.giveaways.forms.create') %>
<% end %>