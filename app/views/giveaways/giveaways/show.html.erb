<%= link_to t('giveaways.giveaways.back_to_index_link'), giveaways.giveaways_path %>

<h1>Giveaway: <%= @giveaway.title %></h1>


<%= link_to t('giveaways.giveaways.edit_link'), giveaways.edit_giveaway_path(@giveaway) %>

<%= link_to t('giveaways.giveaways.entrants_link'), giveaways.giveaway_entrants_path(@giveaway) %>

<%= link_to t('giveaways.giveaways.draw_link'), giveaways.draw_giveaway_entrants_path(@giveaway) if @giveaway.closed? %>

<h5 class="starts_at">Starts at: <span><%= l @giveaway.starts_at, format: :giveaways_long %></span></h5>
<h5 class="starts_at">Ends at: <span><%= l @giveaway.ends_at, format: :giveaways_long %></span></h5>

<%= sanitize @giveaway.description.html_safe %>

<%= sanitize @giveaway.thank_you_message.html_safe %>

<%= @giveaway.email_from %>

<%= @giveaway.email_reply_to %>

<%= @giveaway.email_subject %>

<%= @giveaway.email_message %>

