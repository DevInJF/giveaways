<div class="ga-container">
  <div class="ga-page-column">
    <div class="ga-page">
      <h1 class="page-heading"><%= @giveaway.title %></h1>

      <%= render partial: 'shared/giveaway_tabs', locals: {giveaway: @giveaway, current_tab: 'entrants'} %>

      <div class="actions">
        <div class="actions-right">
          <%= link_to t('giveaways.entrants.csv_link'), giveaway_entrants_path(@giveaway, format: "csv"), class: 'button' %>         
        </div>
      </div>

      <table class="entrants-list">
      	<thead>
      		<tr>
      			<th>Name</th>
      			<th>Email</th>
      			<th>Ballots</th>
      		</tr>
      	</thead>
      	<tbody>
      		<% @entrants.each do |entrant| %>
      			<tr>
      				<td><%= entrant.first_name %></td>
      				<td><%= entrant.email %></td>
      				<td><%= entrant.ballots.count %></td>
      			</tr>	
      		<% end %>
      	</tbody>
      </table>

      <%= paginate @entrants %>
    </div> 
  </div> 
</div> 